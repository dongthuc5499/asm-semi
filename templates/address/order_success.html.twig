{#{% extends 'base.html.twig' %}

{% block title %}Order Information{% endblock %}

{% block body %}
    <div class="container"><br><br>
        <div class="row justify-content-center">
            <div class="col-md-5" style="background: white"><br>
                <div style="width: 450px; margin: auto">
                <div class="form-group" style="background: #d5f7e0; color: #1e9800; border-radius: 6px">
                    <h4 style="text-align: center; padding: 15px">
                        <svg width="32" height="32" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg" style="padding: 2px; margin: auto">
                            <path d="M18.125 5.8H16.25C16.25 3.7005 14.5719 2 12.5 2C10.4281 2 8.75 3.7005 8.75 5.8H6.875C5.84375 5.8 5 6.655 5 7.7V19.1C5 20.145 5.84375 21 6.875 21H18.125C19.1562 21 20 20.145 20 19.1V7.7C20 6.655 19.1562 5.8 18.125 5.8ZM10.625 9.6C10.625 10.1225 10.2031 10.55 9.6875 10.55C9.17188 10.55 8.75 10.1225 8.75 9.6V7.7H10.625V9.6ZM12.5 3.9C13.5312 3.9 14.375 4.755 14.375 5.8H10.625C10.625 4.755 11.4688 3.9 12.5 3.9ZM16.25 9.6C16.25 10.1225 15.8281 10.55 15.3125 10.55C14.7969 10.55 14.375 10.1225 14.375 9.6V7.7H16.25V9.6Z" fill="#1E9800"></path>
                            <path d="M10.954 19L8.70926 16.8743C8.32395 16.5095 8.32395 15.8959 8.70926 15.5311V15.5311C9.06636 15.1929 9.62564 15.1933 9.98224 15.532L10.954 16.455L15.0175 12.6032C15.3743 12.2649 15.9334 12.2648 16.2904 12.6028V12.6028C16.6759 12.9679 16.6759 13.5817 16.2904 13.9467L10.954 19Z" fill="white"></path>
                        </svg>&nbsp;<b style="font-size: 23px">Order Information</b></h4>
                </div>
                    <a style="font-size: 15px">
                        <a>Thank you for giving us the opportunity to serve you.</a><br>
                        <a>Staff will contact you as soon as possible.</a>
                    </a>

                {% for address in addresses %}
                    {% if address.user == app.user %}
                        <br><br>
                        <div style="background: #ececec; border-radius: 6px">
                            <div class="form-group">
                                <div class="row" style="padding: 20px 0px 0px 2px">
                                    <div class="col-6">&emsp;
                                        {% if nextIdOrder is defined %}
                                        <span class="title" style="font-size: 18px">ORDER #{{ nextIdOrder }}</span>
                                        {% endif %}
                                    </div>
                                    <div class="col" style="margin-left: 50px">
                                        <a class="order-management" href="{{ path('purchase_order') }}" style="text-decoration: none;">Order Management</a>
                                    </div>
                                </div>
                            </div><hr>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-4">&emsp;
                                    <span class="title" style="font-size: 15px"><b>• Client:</b></span>
                                </div>
                                <div class="col-7">
                                    <span>{{ address.user.username }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-4">&emsp;
                                    <span class="title" style="font-size: 15px"><b>• Phone:</b></span>
                                </div>
                                <div class="col-7">
                                    <span>{{ address.user.phone }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-4">&emsp;
                                    <span class="title" style="font-size: 15px"><b>• Delivered to:</b></span>
                                </div>
                                <div class="col-7">
                                    <span>{{ address.street }}, {{ address.ward }}, {{ address.district }}, {{ address.province }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-4">&emsp;
                                    <span class="title" style="font-size: 15px"><b>• Total price:</b></span>
                                </div>
                                <div class="col-7">
                                    <span><b style="color: red; font-size: 15px">{{ app.session.get('total') }}</b></span>
                                </div>
                            </div>
                        </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-4">&emsp;
                                        <span class="title" style="font-size: 15px"><b>• Payments:</b></span>
                                    </div>
                                    <div class="col">
                                        <span style=" font-size: 15px">Payment on Delivery (COD)</span>
                                    </div>
                                </div>
                            </div>
                        <div class="form-group" style="height: 70px">
                            <div class="status-payment" style="background: #fff6ed; color: #ffb14c; height: 50px; width: 400px; margin: auto; border-style: dotted; border-width: 2px; border-radius: 10px;">
                                <h6 style="padding: 12px; text-align: center; height: 30px">The order has not been paid</h6>
                            </div>
                        </div>
                        </div>
                        <div class="form-group" style="height: 60px">
                            <a href="{{ path('product_list') }}" class="highlight-button" style="font-size: 25px; width: 100%; border-radius: 6px; background: white; border: 0.3px solid #1e9cff; height: 60px; display: flex; align-items: center; justify-content: center;text-decoration: none;">
                                <b style="font-size: 23px;">Continue shopping</b>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
                </div>
            </div>
        </div><br><br><br><br>
    </div>
    <style>
        .highlight-button {
            background: white;
            color: #1e9cff;
        }

        .highlight-button:hover {
            background: #1e9cff;
            color: white;
            cursor: pointer;
        }

    </style>
    <script>
        const button = document.querySelector('.highlight-button');

        button.addEventListener('mouseenter', function() {
            button.style.background = '#1e9cff';
            button.style.color = 'white';
        });

        button.addEventListener('mouseleave', function() {
            button.style.background = 'white';
            button.style.color = '#1e9cff';
        });
    </script>
{% endblock %}
#}