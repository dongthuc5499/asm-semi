{#{% extends 'base.html.twig' %}

{% block title %}Chang Password{% endblock %}

{% block body %}
    <br><br>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <h5><a class="d-flex align-items-center dropdown-item mb-0">
                        <div type="button" data-bs-toggle="dropdown" style="width: 60px;">
                            <img src="{{ asset('uploads/image/' ~ app.user.avatar) }}" alt="" style="width: 50px; height: 50px; border: 0;" class="rounded-pill">
                        </div>
                        <div style="font-weight: bold;">{{ app.user.username }}</div>
                    </a>
                </h5><br>
                <hr style="opacity: 0.05;">
                <div class="d-flex align-items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" style="font-size: 25px; color: blue" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"/>
                    </svg>
                    <a style="margin-left: 10px" >Reset Password</a></div><br>
                <div style="margin-left: 35px">
                    <a href="{{ path('app_user') }}" style="color: inherit; text-decoration: none;">
                        <span class="profile-link" onmouseover="this.style.color='hotpink'" onmouseout="this.style.color='inherit'">
                            Profile
                        </span>
                    </a>
                </div><br>

                <div style="margin-left: 35px">
                    <a href="{{ path('app_forgot_password_request') }}" id="changepassword" style="color: hotpink; text-decoration: none;">
                    </a>
                </div><br>
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" style="font-size: 25px; color: chocolate" width="16" height="16" fill="currentColor" class="bi bi-journal-text" viewBox="0 0 16 16">
                        <path d="M5 10.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
                        <path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z"/>
                        <path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z"/>
                    </svg>
                    <a style="margin-left: 5px">Purchase order</a>
                </div><br>
            </div>

            <div class="col-sm-9" style="background: white">
                <div class="col"><br>
                    <h5>My Profile</h5>
                    <a>Manage profile information for account security</a>
                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}
                </div>
                <hr><br><br><br>
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-8">
                        <style>
                            .form-table td {
                                vertical-align: middle;
                            }
                        </style>
                        <p>
                            If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.
                            This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                        </p>
                        <p>If you don't receive an email please check your spam folder or <a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>

                    </div>
                </div><br><br><br><br><br>
            </div>
        </div>
    </div>
    </div><br><br><br><br>
    <style>
        table.table {
            border-collapse: collapse;
        }

        table.table td {
            border: none;
            padding: 10px 10px;
        }
        .profile-link:hover {
            color: hotpink;
        }
    </style>
    <script>

    </script>

{% endblock %}
#}