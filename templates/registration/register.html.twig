{% block body %}
    <!-- Font Awesome -->
    <link rel="icon" href="{{ asset('uploads/image/logodt.jpg') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.4.0/mdb.min.css" rel="stylesheet" />
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.4.0/mdb.min.js"></script>

    <title>Sign Up</title>

    <!-- Section: Design Block -->
    <section class="text-center text-lg-start" style="background-color: #FFFAF9">
        <style>
            .cascading-right {
                margin-right: 50px;
            }

            @media (max-width: 991.98px) {
                .cascading-right {
                    margin-right: 0;
                }
            }

        </style>

        <!-- Jumbotron -->
        <div class="container py-4">
            <div class="row g-0 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card cascading-right" style="background: hsla(0, 0%, 100%, 0.55); backdrop-filter: blur(30px);">
                        <div class="card-body p-5 shadow-5 text-center">
                            <h2 class="d-flex justify-content-center">Sign Up</h2>
                            {{ form_start(registrationForm) }}
                            <!-- Email input -->
                            <div class="mb-4">
                                {{ form_row(registrationForm.email, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Email'
                                    }
                                }) }}
                            </div>

                            <!-- Username input -->
                            <div class="mb-4">
                                {{ form_row(registrationForm.username, {
                                    'label': 'Full Name',
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Full Name'
                                    }
                                }) }}
                            </div>

                            <!-- Phone input -->
                            <div class="mb-4">
                                {{ form_row(registrationForm.phone, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Phone'
                                    }
                                }) }}
                            </div>

                            <!-- Sex input -->
                            <div class="mb-4">
                                {{ form_row(registrationForm.sex, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Sex'
                                    }
                                }) }}
                            </div>

                            <!-- Birthday input -->
                            <div class="mb-4">
                                {{ form_row(registrationForm.birthday, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Birthday'
                                    }
                                }) }}
                            </div>

                            <!-- Password input -->
                            <div class="mb-4">
                                {{ form_row(registrationForm.plainPassword, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Password'
                                    },
                                    'label': 'Password'
                                }) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(registrationForm.avatar, {
                                    'label_attr': {'class': 'd-none'},
                                    'attr': {
                                        'class': 'd-none',
                                        'value': 'avatar-default.jpg'
                                    }
                                }) }}
                            </div>

                            <!-- Checkbox -->
                            <div class="form-check d-flex justify-content-left mb-4">
                                {{ form_widget(registrationForm.agreeTerms) }}
                                <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">I agree to the terms of privacy</label>
                            </div>

                            <!-- Submit button -->
                            <div class="pt-1 mb-5">
                                <button type="submit" class="btn btn-dark btn-lg btn-block">
                                    Sign up
                                </button>
                            </div>
                            <p class="mb-2 pb-lg-2" style="color: #393f81;">
                                Already have an account! <a href="{{ path('app_login') }}" style="color: #393f81;">Login here</a>
                            </p>
                            {{ form_end(registrationForm) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 mb-5 mb-lg-0">
                    <img src="{{ asset('uploads/image/logodt.jpg') }}" class="w-100 rounded-4 shadow-4" alt="" style="height: 200%" />
                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->
{% endblock %}
